{
  "name": "pulsefm",
  "version": "1.0.0-alpha",
  "description": "Electron app do odtwarzania stacji radiowych z API Zenwave",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64"
  },
  "author": "monderey",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.pulsefm.app",
    "productName": "PulseFM",
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "pulsefm.ico",
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  }
}
